---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<style is:global>
  ::-webkit-scrollbar {
    width: 10px;
  }

  /* Track */
  ::-webkit-scrollbar-track {
    background: #7c3aed;
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: white;
  }
</style>

<body class="bg-slate-200 flex flex-col h-screen overflow-x-hidden">
  <Navbar />

  <div class="flex-grow overflow-y-scroll">
    <slot />
  </div>

  <Footer />
</body>
